      <!-- <%= javascript_include_tag 'calendar' %>         <img src="/images/parliamo_contrast.png">Parliamo Italiano!</img>
-->
      <script>
        JQ(document).ready( function() {
          showFlashes();
          setTimeout( "hideFlashes()", 5000 );
        });
        
        function showFlashes() {
          JQ("#flash_notice").fadeIn(200);
          JQ("#flash_error").fadeIn(200);
          JQ("#flash_notice").click( function() {JQ("#flash_notice").hide();} );
          JQ("#flash_error").click( function() {JQ("#flash_error").hide();} );
        }
        
        function hideFlashes() {
          JQ("#flash_notice").fadeOut(500);
          JQ("#flash_error").fadeOut(500);
        }
      </script>

  </head>
  <body>
    <div id="mainContainer">
      <div id="header">
        <% if flash[:notice] %>
          <div id="flash_notice"><%= flash[:notice] %></div>
        <% end -%>
        <% if flash[:error] %>
          <div id="flash_error"><%= flash[:error] %></div>
        <% end -%>
        
        
        <h1>&nbsp;</h1>
        <br/>
        <br/>
        <div style="position:relative; top:-76px; left: -0px;"><img id="logo" src="/images/parliamo_contrast.png"/></div>
      </div> 
      <div class="outer">
        <div class="inner">
          <div class="float-wrap">
            <div id="content"> 
              <%= yield  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="footer">
    <div id="footer-content">
    </div>
  </div>

<script type="text/javascript">
